<!DOCTYPE html>

<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />

  @if (!string.IsNullOrEmpty(ViewBag.Title))
  {
    <title>netug-niederrhein - @ViewBag.Title</title>
  }
  else
  {
    <title>netug-niederrhein</title>
  }
  
  @Scripts.Render("~/bundles/modernizr")

  <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,700" rel="stylesheet" type="text/css" />
  @Styles.Render("~/Content/css")
</head>

<body>
  @Html.Partial("_TopBar")
  @Html.Partial("_Header")
  @*@Html.Action("UpcomingEvent", "Home", new { area = string.Empty })*@

  <section id="main-content">
    <div class="row">
      <div class="large-12 columns">
        <section id="main">
          @RenderBody()
        </section>
      </div>
    </div>
    <div id="footer-wrapper"></div>
  </section>

  <footer id="main-footer">
    <div class="row">
      <div class="twelve columns">
        <ul class="inline-list right">
          <li>@Html.ActionLink("Login", "Login", "Account")</li>
          <li>@Html.ActionLink("Impressum", "Imprint", "Home")</li>
        </ul>
      </div>
    </div>
  </footer>

  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/validation")
  @Scripts.Render("~/bundles/foundation")
  @Scripts.Render("~/bundles/groupr")

  <script>
    $(document).foundation();
  </script>

  @if (!Context.IsDebuggingEnabled)
  {
    @Html.Partial("_Analytics")
  }
</body>
</html>
