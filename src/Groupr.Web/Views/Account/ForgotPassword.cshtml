@model ForgotPasswordViewModel

@{
  ViewBag.Title = Labels.RequestNewPassword;
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@Labels.RequestNewPassword</h3>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.MailAddress)
  @Html.EditorFor(model => model.MailAddress)

  <input type="submit" class="small button" value="@Labels.RequestNewPassword" />
}